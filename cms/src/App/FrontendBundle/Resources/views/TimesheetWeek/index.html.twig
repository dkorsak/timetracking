                {{ loopDate|format_date('EEE') }}<br />
                <a href="{{ path('timesheet_day') }}{{ loopDate|date('/Y/m/d') }}">{{ loopDate|format_date('dd MMM') }}</a>
            </th>
            {% endfor %}
            <th class="total">{% trans from 'timesheet' %}Total{% endtrans %}</th>
            <th class="actions">&nbsp;</th>
        </tr>
